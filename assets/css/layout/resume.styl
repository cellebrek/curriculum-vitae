.l-resume {
	padding: 20px;
	text-align: center;
}

.l-resume__wrapper {
    display: inline-block;
    padding: 20px 20px;
    background: white;
    max-width: 900px;
    text-align: left;
	
	@media $medium {
		padding: 20px 40px;
	}
}

.l-resume__title {
    text-align: right;
	
	h1 {
		margin: 0;
	    line-height: 35px;
		font-size: 4rem;
	    font-weight: 700;
	}
	
	h2 {
	    margin: 0;
	    text-transform: uppercase;
		font-weight: 200;
	    font-size: 2.36rem;
	}
}

.l-resume__category {
    padding: 20px 0;
    font-size: 0;
	
	h3 {
	    margin: 0 0 10px 0;
		text-align: left;
		font-weight: 700;
	    font-size: 1.5rem;
		
		@media $medium {
			text-align: right;
		}
	}
	
	li {
	    padding: 2px 0;
		
		span {
			font-weight: 400;
			color: #575757;
		}
	}
}

.l-resume__category-list, .l-resume__detail-list {
	display: block;
	vertical-align: top;
	padding: 0;
    margin: 0;
    list-style: none;
	
	li {
		font-size: 1.6rem;
	}
	
	@media $medium {
		display: inline-block;
	}
}

.l-resume__category-list {
    padding-right: 8px;
    width: 25%;
    text-align: right;
	
	> li {
		display: none;
		
		@media $medium {
			display: block;
		}
	}
}

.l-resume__detail-list {
    border-left: 2px solid #ddd;
    padding-left: 8px;
	width: 75%;
	
	> h3 {
		display: none;
		
		@media $medium {
			display: block;
		}
	}
	
	h3 {
		color: white;
	}
	
	li {
		
		p {
			margin: 0;
		}
	}
}

.l-resume__date {
    font-weight: 700;
	font-size: 1.6rem;
	
	&:before {
	    content: "";
	    width: 8px;
	    height: 8px;
	    background: #ddd;
	    position: absolute;
	    margin-left: -13px;
	    margin-top: 5px;
	    border-radius: 100%;
	}
}

.l-resume__float-detail {
	display: none;
    position: absolute;
    margin-left: -80px;
    text-align: right;
	
	@media $medium {
		display: block;
	}
}

