.l-resume {
	padding: 20px;

	h1 {
		margin: 0;
		text-align: center;
		font-size: 8vw;

		&:nth-child(1) { font-size: 8vw; font-style: normal; font-weight: 700; }
		&:nth-child(2) { font-size: 7vw; font-style: normal; font-weight: 500; }
		&:nth-child(3) { font-size: 6vw; font-style: normal; font-weight: 400; }
		&:nth-child(4) { font-size: 5vw; font-style: normal; font-weight: 200; }
		&:nth-child(5) { font-size: 4vw; font-style: normal; font-weight: 100 }
		&:nth-child(6) { font-size: 4vw; font-style: italic; font-weight: 400; }
		&:nth-child(7) { font-size: 5vw; font-style: italic; font-weight: 500; }
		&:nth-child(8) { font-size: 6vw; font-style: italic; font-weight: 700; }
	}
}
