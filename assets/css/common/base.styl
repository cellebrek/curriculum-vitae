* {
    box-sizing: border-box;
    -webkit-overflow-scrolling: touch;

    &:focus {
        outline: none;
    }
}

html,
body {
    height: 100%;
}

html {
    font-size: 62.5%;
}

body {
    overflow: hidden;
    margin: 0;
    background: white;
    font-family: 'Hero', sans-serif;
    font-size: 16px;
    color: #000;
}

main {
    position: relative;
    width: 100%
    height: 100%;
}

a {
    text-decoration: none;
    color: inherit;
}

svg {
    width: 100%;
    height: 100%;
}
